<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    tools:context="com.gioaudino.geopost.AddFriendActivity"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    tools:showIn="@layout/activity_add_friend">

    <EditText
        android:id="@+id/username_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:hint="@string/username_label"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/error_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_field"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/error_network_fetching"
        android:textColor="@color/redBackgroundTint"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/list_search_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_field"
        android:layout_marginTop="8dp" />

</RelativeLayout>
